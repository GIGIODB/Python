meses = ['Janeiro','Fevereiro','Março','Abril','Maio','Junho','Julho','Agosto','Setembro','Outubro','Novembro','Dezembro']
temp = []
soma = int(0)
for i in meses:
    x = float(input("Qual a temperatura do mês de "+ i + "? "  ))
    temp.append(x)
    soma = soma + x
print("A temperatura total no ano foi de: "+ str(soma))
print("E a média foi de :" + str(soma / len(meses)))
